Package: stacks
Title: Tidy Model Stacking Tools
Version: 0.0.0.9000
Authors@R: c(
    person(given = "Simon",
           family = "Couch",
           role = c("aut", "cre"),
           email = "simonpatrickcouch@gmail.com"),
    person(given = "Max", 
           family = "Kuhn", 
           email = "max@rstudio.com", 
           role = "aut"),
    person("RStudio", 
           role = "cph")
